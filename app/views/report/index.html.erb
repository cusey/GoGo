<h1>Worker Reports</h1>


<script>
$(document).ready(function() {
    $('#example').DataTable();
} );
</script> 

<table id="example" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Position</th>
                <th>Office</th>
                <th>Age</th>
                <th>Salary</th>
            </tr>
        </thead>
        
        
  <tbody>
    <% @workers.each do |worker| %>
      <tr>
        <td><%= worker.name %></td>
        <td><%= worker.position %></td>
        <td><%= worker.office %></td>
        <td><%= worker.age %></td>
        <td><%= worker.price %></td>
       
      </tr>
    <% end %>
  </tbody>
    </table>
