<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
</style>

<p id="notice"><%= notice %></p>

<h1>Upload Errors</h1>

<table>
  <thead>
    <tr>
      <th>Upload Result Id</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @upload_errors.each do |upload_error| %>
      <tr>
        <td><%= upload_error.uploadResultId %></td>
        <td><%= upload_error.message %></td>
        <td><%= link_to 'Show', upload_error %></td>
        <td><%= link_to 'Edit', edit_upload_error_path(upload_error) %></td>
        <td><%= link_to 'Destroy', upload_error, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Home', root_path %> |
<%= link_to 'New Upload Error', new_upload_error_path %>
